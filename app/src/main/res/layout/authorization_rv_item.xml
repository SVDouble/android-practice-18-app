<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/pa.item.player_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground" />

        <TextView
            android:id="@+id/pa.item.player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/pa.item.player_icon"
            android:layout_toStartOf="@id/pa.item.expand_icon"
            android:layout_marginStart="5dp"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/pa.item.expand_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/pa.item.button_delete"
            android:src="@android:drawable/arrow_down_float"/>

        <ImageButton
            android:id="@+id/pa.item.button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@android:drawable/ic_delete"
            android:background="?android:selectableItemBackground" />
    </RelativeLayout>
</android.support.v7.widget.CardView>